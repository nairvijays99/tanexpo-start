{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "style": {
        "noDefaultExport": "off",
        "useComponentExportOnlyModules": "off"
      },

      "correctness": {
        "noUnusedImports": "error"
      },

      "security": "off"
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },

  "files": {
    "includes": ["**/*", "!!**/*.gen.ts", "!!**/*.gen.tsx"]
  },

  "overrides": [
    {
      "includes": ["**/app/**", "**/routes/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
            "useComponentExportOnlyModules": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.config.js", "scripts/**"],
      "linter": {
        "rules": {
          "style": {
            "noCommonJs": "off",
            "useNodejsImportProtocol": "off"
          }
        }
      }
    }
  ]
}
