{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/app/*": ["libs/app/src/*"],
      "@libs/app": ["libs/app/src/index"],
      "@libs/utils/*": ["libs/utils/src/*"],
      "@libs/utils": ["libs/utils/src/index"],
      "@libs/theme/*": ["libs/theme/src/*"],
      "@libs/theme": ["libs/theme/src/index"],
      "@libs/ui/*": ["libs/ui/src/*"],
      "@libs/ui": ["libs/ui/src/index"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "allowImportingTsExtensions": false
  },
  "include": []
}
